<resources>
    <!-- Style de base pour les ImageViews circulaires -->
    <style name="CircleImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Style alternatif avec bordure -->
    <style name="CircleImageView.WithBorder" parent="CircleImageView">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>
    <style name="RoundedTopCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>